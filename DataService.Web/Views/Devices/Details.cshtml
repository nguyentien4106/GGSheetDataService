@model DataService.Core.Entities.Device


@{
    ViewData["Title"] = "Details";
}


<div class="d-flex justify-content-between">
    <h1>Details</h1>
    <div><a class="btn btn-primary" asp-action="Index">Back to List</a></div>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ip)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ip)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Port)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Port)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CommKey)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CommKey)
        </dd>
    </dl>
    <hr />
    <dl class="row">
        @{
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Sheet Name</th>
                        <th scope="col">Document Id</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var index = 1;
                        foreach (var sheet in Model.Sheets)
                        {
                            <tr>
                                <th scope="row">@(index++)</th>
                                <td>@sheet.SheetName</td>
                                <td>@sheet.DocumentId</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            
        }
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 

</div>
